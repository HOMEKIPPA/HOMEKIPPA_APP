<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostActivity">

    <RelativeLayout
        android:id="@+id/toolbar_addPost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/kippaBlue"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="글쓰기"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_CompletePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:text="완료"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/linearLayout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText_addPostTitle"
                style="@style/BlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_gray"
                android:drawableLeft="@drawable/ic_pets_24px"
                android:drawablePadding="10dp"
                android:hint="제목을 입력하세요 "
                android:padding="15dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText_postContent"
                style="@style/BlackText"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="@drawable/border_gray"
                android:gravity="top|left"
                android:hint="반려동물과의 추억을 다른 사람들과 함께 공유해 보세요"
                android:padding="20dp"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameLayout_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout_title"
            android:layout_marginBottom="10dp"
            android:layout_gravity="top"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="9dp">

                <ImageView
                    android:id="@+id/post_image"
                    android:layout_width="93dp"
                    android:layout_height="93dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="93dp"
                android:translationY="3dp"
                app:cardCornerRadius="10dp">

                <ImageButton
                    android:id="@+id/button_cancel_post_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_cancel_24px" />

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayou_postScope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout_title"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/dialog_group_pet"
            android:layout_gravity="center">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/checkBox_wholeScope"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:text="전체  공개"
                    style="@style/GrayText"
                    android:onClick="onCheckboxClicked_scope"
                    android:layout_gravity="start"
                    android:gravity="center"
                    />
                <CheckBox
                    android:id="@+id/checkBox_followScope"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:text="팔로우 공개"
                    style="@style/GrayText"
                    android:onClick="onCheckboxClicked_scope"
                    android:layout_gravity="start"
                    android:gravity="center"
                    />
                <CheckBox
                    android:id="@+id/checkBox_closedScope"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:text="비공개"
                    style="@style/GrayText"
                    android:onClick="onCheckboxClicked_scope"
                    android:layout_gravity="start"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/border_gray"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left">

                <ImageButton
                    android:id="@+id/button_Add_Post_Img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_photo_24px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:id="@+id/textView_postScope"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="공개범위"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/BlackText"
                    />




            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

