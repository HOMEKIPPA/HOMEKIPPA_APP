<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/naviheader_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="30dp"
    android:background="@color/kippaYellow">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_user_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/dog_woong"
        app:layout_constraintBottom_toTopOf="@+id/nav_user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--    <ImageView-->
    <!--        android:layout_width="150dp"-->
    <!--        android:layout_height="150dp"-->
    <!--        android:id="@+id/user_image"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"-->
    <!--        android:layout_marginLeft="24dp"-->
    <!--        android:src="@drawable/simplelogo"/>-->

    <TextView
        android:id="@+id/nav_user_name"
        style="@style/BlackText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="내이름은 코난, 탐정이죠 "
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_user_image" />
   <TextView
        android:id="@+id/nav_user_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="그룹을 생성해주세요!"
        android:textStyle="bold"
        android:gravity="center"
        style="@style/GrayText"
        android:textSize="12dp"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_user_name" />

</androidx.constraintlayout.widget.ConstraintLayout>