<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/kippaYellow"
    android:id = "@+id/naviheader_container">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/user_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp"
        android:src="@drawable/simplelogo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/user_name" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/user_image"
        android:textColor="#FFFFFF" android:textSize="20sp"
        android:layout_marginLeft="24dp"/>
    <TextView
        android:text="그룹을 생성해주세요!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_group" android:textSize="12sp"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>