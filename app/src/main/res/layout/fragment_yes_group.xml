<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.group.YesGroup">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/LinearLayout_yesgroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/ImageView_groupCover"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="top"
                android:background="@drawable/base_cover" />

            <ImageView
                android:id="@+id/ImageView_white"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="top"
                android:layout_marginTop="150dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/ic_brightness_1_white_18dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ImageView_groupProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="150dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/ic_account_circle_24px_filled" />

            <TextView
                android:id="@+id/textView_groupName"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="125dp"
                android:layout_marginBottom="25dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="우만동 땡이가족 " />


        </FrameLayout>
    </LinearLayout>

</FrameLayout>