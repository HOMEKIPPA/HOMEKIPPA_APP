<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:background="@color/kippaBlue"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/toolbar_logIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="일과 추가"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <EditText
            android:id="@+id/editText_dailyWorkName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_date_range_24px"
            android:drawablePadding="10dp"
            android:hint="일과 이름 "
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editText_dailyWorkDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_notes_24px"
            android:drawablePadding="10dp"
            android:hint="일과 설명 "
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editText_dailyWorkTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_schedule_24px"
            android:drawablePadding="10dp"
            android:hint="일과 수행 시간 "
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editText_dailyWorkAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_add_alert_24px"
            android:drawablePadding="10dp"
            android:hint="일과 알람 설정 "
            android:textSize="15dp" />


        <Button
            android:id="@+id/button_gotocreateDailyWork"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button2"
            android:text="일과 추가 하기 " />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>